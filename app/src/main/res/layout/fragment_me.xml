<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nentrang"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_soluongtaikhoan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SỐ lượng"
        android:textColor="#100200"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv_soluongdangban"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SỐ lượng"
        android:textColor="#100201"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv_soluong"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:text="SỐ lượng"
        android:textColor="#0E0101"
        android:textSize="20dp" />


    <TextView
        android:id="@+id/tv_thunhap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tổng thu nhập "
        android:textColor="#0B0100"
        android:textSize="20dp" />



    <LinearLayout
        android:layout_width="209dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_margin="300dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/buttonsred"
            android:text="Thoát"
            android:textColor="#F8F1F0"
            android:textSize="25dp" />


    </LinearLayout>
</LinearLayout>