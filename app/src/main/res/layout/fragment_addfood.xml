<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    android:layout_height="match_parent">
    <EditText

        android:layout_marginTop="20dp"
        android:layout_height="30dp"
        android:hint="Tên đồ uống"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:id="@+id/edt_namefood"
        android:gravity="center"
        android:background="@drawable/botron_btn_acc"
        />
    <Spinner
        android:layout_marginTop="17dp"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:id="@+id/spn_food"
        android:layout_margin="10dp"
        android:background="@drawable/botron_btn_acc"/>

    <EditText

        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:hint="Giá đồ uống"
        android:gravity="center"
        android:id="@+id/edt_price"
        android:background="@drawable/botron_btn_acc"
        android:layout_margin="1dp"/>
    <EditText
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:hint="Mô tả sản phẩm"
        android:gravity="center"
        android:id="@+id/edt_describe"
        android:background="@drawable/botron_btn_acc"
        android:layout_margin="10dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_baseline_camera_alt_24"
            android:id="@+id/imv_camera"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_folder"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:textColor="#fff"
            android:background="@drawable/buttonsred"
            android:text="Thư mục hình ảnh">
        </Button>
    </LinearLayout>


    <ImageView
        android:id="@+id/imv_add_food"
        android:layout_width="106dp"
        android:layout_height="113dp"
        android:layout_gravity="center"
        android:layout_margin="10dp" />

    <Button
        android:id="@+id/btn_addfood"
        android:layout_width="263dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/buttonsred"
        android:onClick="AddDrink"
        android:textSize="20dp"
        android:text="ADD DRINK"
        android:textColor="#fff" />



</LinearLayout>